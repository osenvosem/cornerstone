{
  "name": "cornerstone",
  "version": "1.0.0",
  "description": "Express, Mongoose, Redux, React starter project",
  "main": "index.js",
  "repository": "https://github.com/osenvosem/cornerstone",
  "author": "Sergey Samsonov",
  "license": "MIT",
  "scripts": {
    "watch:client": "webpack-dev-server --env.dev --env.client --config config/webpack/index.babel.js",
    "build:client:prod": "webpack --env.prod --env.client --config config/webpack/index.babel.js",
    "build:server:dev": "webpack --env.dev --env.server --config config/webpack/index.babel.js",
    "build:server:prod": "webpack --env.prod --env.server --config config/webpack/index.babel.js",
    "watch:server-bundle": "nodemon --watch server/server.bundle.js server/server.bundle.js",
    "watch": "npm-run-all build:server:dev -p \"build:server:dev -- --watch\" watch:*",
    "build:prod": "run-p build:server:prod build:client:prod",
    "start:prod": "NODE_ENV=production node server/server.bundle.js"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-styled-components": "^1.0.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-react": "^6.22.0",
    "css-loader": "^0.26.1",
    "file-loader": "^0.10.0",
    "jest": "^18.1.0",
    "lodash-webpack-plugin": "^0.11.0",
    "nodemon": "^1.11.0",
    "postcss": "^5.2.11",
    "postcss-loader": "^1.2.2",
    "react-hot-loader": "next",
    "style-loader": "^0.13.1",
    "styled-components": "next",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-node-externals": "^1.5.4",
    "yarn-run-all": "^3.1.1"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "body-parser": "^1.16.0",
    "compression": "^1.6.2",
    "feathers": "^2.0.3",
    "feathers-configuration": "^0.4.1",
    "feathers-hooks": "^1.7.1",
    "feathers-hooks-common": "^2.0.3",
    "feathers-mongoose": "^4.0.1",
    "feathers-rest": "^1.6.0",
    "feathers-socketio": "^1.4.2",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "mongoose": "^4.8.1",
    "normalizr": "^3.1.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router-dom": "next",
    "redux": "^3.6.0",
    "redux-saga": "^0.14.3",
    "serve-favicon": "^2.3.2",
    "webpack-merge": "^2.6.1"
  }
}
